chain:
    bech32_prefix: {{ .ChainPrefix }}
    modules:
        - modules
        - messages
        - auth
        - bank
        - consensus
        - mint
        - pricefeed
        - actions
        - thorchain
node:
    type: remote
    config:
        rpc:
            client_name: juno
            address: http://{{ .NodeIP }}:{{ .RpcPort }}
            max_connections: 20
        grpc:
            address: http://{{ .NodeIP }}:{{ .GrpcPort }}
            insecure: true
parsing:
    workers: 20
    listen_new_blocks: true
    parse_old_blocks: true
    parse_genesis: false
    start_height: 1
    fast_sync: false
    average_block_time: 1s

database:
    url: postgresql://bdjuno:password@{{ .PostgresIP }}:{{ .PostgresPort }}/bdjuno?sslmode=disable&search_path=public
    name: bdjuno
    host: postgres
    port: 5432
    user: bdjuno
    password: password
    schema: public
    max_open_connections: 20
    max_idle_connections: 20
    partition_size: 100000
    partition_batch: 1000

logging:
    level: info
    format: text

telemetry:
    enabled: false

pruning:
    keep_recent: 100
    keep_every: 500
    interval: 10

pricefeed:
  tokens:
    - name: "Thorchain"
      units:
        - denom: "rune"
          exponent: 8
          price_id: "thorchain"

actions:
    host: 127.0.0.1
    port: 3000
