#!/bin/bash
# Update basic genesis parameters using sed for speed

GENESIS_FILE="/tmp/genesis.json"

# Use sed for fast string replacement of basic parameters
sed -i 's/"app_version": "[^"]*"/"app_version": "{{ .AppVersion }}"/' "$GENESIS_FILE"
sed -i 's/"genesis_time": "[^"]*"/"genesis_time": "{{ .GenesisTime }}"/' "$GENESIS_FILE"
sed -i 's/"chain_id": "[^"]*"/"chain_id": "{{ .ChainID }}"/' "$GENESIS_FILE"
sed -i 's/"initial_height": "[^"]*"/"initial_height": "{{ .InitialHeight }}"/' "$GENESIS_FILE"

echo "Updated basic genesis parameters"
